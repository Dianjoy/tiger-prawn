<form class="form-horizontal ajax" method="post" action="{{login.action}}" id="popup-form">
  <div class="alert alert-msg" style="display: none;"></div>
  <div class="form-group">
    <label for="username" class="col-sm-2 hidden-xs control-label">用户名</label>
    <div class="col-sm-10 col-xs-12">
      <input name="username" id="username" class="form-control" placeholder="用户名" required>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 hidden-xs control-label">密码</label>
    <div class="col-sm-10 col-xs-12">
      <input type="password" name="password" id="password" class="form-control" placeholder="密码" required>
    </div>
  </div>
  <div class="form-group">
    <label for="verifycode" class="col-sm-2 hidde-xs control-label">验证码</label>
    <div class="col-sm-4 col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><img src="{{login.verify}}" alt="验证码" title="点击刷新" id="verify-code" /></span>
        <input type="text" maxLength="4" size="4" name="verifycode" id="verifycode" class="form-control" placeholder="验证码" autofocus required />
      </div>
    </div>
  </div>
</form>