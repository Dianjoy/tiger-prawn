<div class="form-group">
  <label for="editor-popup-input">{{label}}</label>
  <input type="{{#if range}}range{{else}}number{{/if}}" {{#if max}}max="{{max}}"{{/if}} {{#if min}}min="{{min}}"{{/if}} {{#if step}}step="{{step}}"{{/if}} name="{{prop}}" {{#unless range}}class="form-control"{{/unless}} id="editor-popup-input" value="{{value}}" autofocus />
  {{#if range}}<span class="help-inline">{{value}}</span>{{/if}}
</div>
<div class="form-group">
  <input type="checkbox" name="cover_all" id="cover_all" checked value="1">
  <label for="cover_all">同步到同包名同渠道的其它广告</label>
</div>