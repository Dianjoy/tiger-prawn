<div class="form-group">
  <label for="editor-popup-input">选择渠道名称</label>
  <select class="form-control collection-select" name="{{prop}}" id="editor-popup-input" data-collection-id="{{prop}}">
    <script type="text/x-handlebars-template">
    {{{{raw-helper}}}}
      <option value="{{id}}">{{full_name}}（{{pick type '广告主' '网盟' '个人' '换量'}}）</option>
    {{{{/raw-helper}}}}
    </script>
  </select>
</div>
<div class="form-group">
  <label for="new-channel">新建渠道</label>
  <div class="form-control-static">
    <a href="#{{prop}}" class="btn btn-info add-button" data-template="ad/new-channel-popup.hbs" title="添加新渠道" data-confirm="创建"><i class="fa fa-plus"></i> 添加新渠道</a>
  </div>
</div>