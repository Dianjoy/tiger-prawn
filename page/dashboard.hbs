<div class="row dashboard-stats">
  <div class="col-md-3 col-sm-6 dashboard-stat stat-primary">
    <i class="fa fa-cloud fa-3x circle-title"></i>
    <div class="dashboard-stat-content">
      <h3 class="title">在线广告数</h3>
      <p>{{ad}}</p>
    </div>
    <a href="./stat/" class="more">详情 <i class="fa fa-play-circle"></i></a>
  </div>
  <div class="col-md-3 col-sm-6 dashboard-stat stat-secondary">
    <i class="fa fa-check fa-3x circle-title"></i>
    <div class="dashboard-stat-content">
      <h3 class="title">激活数</h3>
      <p>{{activated}}</p>
    </div>
    <a href="./stat/" class="more">详情 <i class="fa fa-play-circle"></i></a>
  </div>
  <div class="col-md-3 col-sm-6 dashboard-stat stat-tertiary">
    <i class="fa fa-download fa-3x circle-title"></i>
    <div class="dashboard-stat-content">
      <h3 class="title">下载数</h3>
      <p>{{download}}</p>
    </div>
    <a href="./stat/" class="more">详情 <i class="fa fa-play-circle"></i></a>
  </div>
  <div class="col-md-3 col-sm-6 dashboard-stat stat-quartus">
    <i class="fa fa-money fa-3x circle-title"></i>
    <div class="dashboard-stat-content">
      <h3 class="title">已消费</h3>
      <p>&yen; {{money}}</p>
    </div>
    <a href="./stat/" class="more">详情 <i class="fa fa-play-circle"></i></a>
  </div>
</div>
<div class="row mt2e">
  <div class="col-md-4 col-sm-12">
    <div class="portlet portlet-orange left-money pit">
      <div class="portlet-leading">
        <h4 class="portlet-title"><i class="fa fa-money"></i> 您的余额</h4>
      </div>
      <div class="portlet-body">
        <p><strong>&yen; {{cash}}</strong> / &yen; {{saved}}</p>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: {{percent}}%">
            <span class="sr-only">剩余{{percent}}%</span>
          </div>
        </div>
        <a href="#" class="btn btn-primary btn-block">
          <i class="fa fa-bolt"></i> 立刻充值！
        </a>
      </div>
    </div>
    <div class="portlet portlet-green">
      <div class="portlet-leading">
        <h4 class="portlet-title"><i class="fa fa-history"></i> 上下线记录</h4>
      </div>
      <div class="portlet-body">
        <ul class="list-group icon-list-group">
          {{#each record}}
            <li class="list-group-item list-group-item-{{status}}">
              <i class="fa fa-{{icon}}"></i>
              <a href="#/ad/{{id}}">{{name}}</a> 于 {{status_time}} <strong>{{status}}</strong>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-sm-12">
    <div class="portlet portlet-blue">
      <div class="portlet-leading">
        <h4 class="portlet-title"><i class="fa fa-line-chart"></i> 流量统计</h4>
      </div>
      <div class="portlet-body">
        <div id="morris-chart" style="width: 100%; height: 300px">

        </div>
        <script type="application/json" class="morris-data" data-target="morris-chart">
          {
            "data": [
              {{#each day}}
                { "date": "{{date}}", "value": {{cpa}} },
              {{/each}}
            ],
            "xkey": "date",
            "ykeys": ["value"],
            "labels": ["CPA"]
          }
        </script>
      </div>
    </div>
  </div>
</div>