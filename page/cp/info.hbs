<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <th width="10%">广告名称</th>
      <td>{{ad_name}}</td>
    </tr>
    <tr>
      <th>总份数</th>
      <td>{{total_num}}</td>
    </tr>
    <tr>
      <th>单价/元</th>
      <td>&yen;{{d100 quote_rmb}}</td>
    </tr>
    <tr>
      <th>投放平台</th>
      <td>{{pick ad_app_type '' 'Android' 'iPhone'}}</td>
    </tr>
    <tr>
      <th>状态</th>
      <td>
        <span class="label label-{{pick status 'default' 'info' 'success' 'danger'}}">{{pick status '待审核' '审核中' '已投放' '审核失败'}}</span>
      </td>
    </tr>
    <tr>
      <th>投放计划</th>
      <td>
        <table class="table">
          <thead>
          <tr>
            <th>开始时间</th>
            <th>结束时间</th>
            <th>关键词</th>
            <th>份数</th>
          </tr>
          </thead>
          <tbody>
          {{#each plans}}
            <tr>
              <td>{{start_time}}</td>
              <td>{{end_time}}</td>
              <td>{{keyword}}</td>
              <td>{{num}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </td>
    </tr>
  </table>
</div>
