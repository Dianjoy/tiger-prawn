<h3 class="text-center">{{#if company}}{{company}}{{else}}{{full_name}}{{/if}}-点乐结算单及开票申请单</h3>
<h4 class="text-center">{{start}} 至 {{end}}</h4>
<div class="row">
  <div class="col-sm-10">
  </div>
  <div class="small col-sm-2">
    <p class="form-control-static">点乐合同编号：{{agreement_number}}</p>
  </div>
</div>

<table class="table table-bordered table-striped responsive-table" data-url=" " id="ad_table">
  <thead>
  <tr>
    <th>推广期间</th>
    <th>
      广告名称
      {{#unless view}}
        <a class="receipt-button" title="添加广告" id="fromList"><i class="fa fa-plus-circle"></i></a>
      {{/unless}}
    </th>
    <th>软著名称</th>
    <th>渠道包</th>
    <th>单价（元）</th>
    <th>渠道CPA（核减前）</th>
    <th>应结算收入（核减前）</th>
    <th>单价（核减后）</th>
    <th>渠道CPA（核减后）</th>
    <th>实际结算收入（核减后）</th>
    <th>核减比例</th>
    <th>核减金额</th>
    <th>备注</th>
  </tr>
  </thead>
  <tbody>
  {{#if view}}
    {{{{raw-helper}}}}
    <script type="text/x-handlebars-template">
      <tr id="{{id}}">
        {{#if rmb}}
          <td>合计人民币（大写）：</td>
          <td colspan="8"  id="rmb">{{rmb}}</td>
          <td id="income-total">&yen; {{income_after_total}}</td>
          <td colspan="3"></td>
        {{else}}
          <td data-title="推广期间">{{quote_start_date}} - {{quote_end_date}}</td>
          <td data-title="广告名称" id="{{ad_id}}" class="ad_id">{{ad_name}}</td>
          <td data-title="软著名称">{{pick sdk_type sdk_types}}</td>
          <td data-title="渠道包">{{cid}}</td>
          <td data-title="单价（元）" class="price">&yen; {{quote_rmb}}</td>
          <td data-title="渠道CPA（核减前）" class="cpa-before">{{cpa}}</td>
          <td data-title="应结算收入（核减前）" class="income-before">&yen; {{income}}</td>
          <td data-title="单价（核减后）">&yen; {{quote_rmb_after}}</td>
          <td data-title="渠道CPA（核减后）">{{cpa_after}}</td>
          <td data-title="实际结算收入（核减后）" class="income-after">&yen; {{income_after}}</td>
          <td data-title="核减比例" class="proportion">{{rate}}%</td>
          <td data-title="核减金额" class="amount">&yen; {{money_cut}}</td>
          <td data-title="备注">{{#if remark}}{{remark}}{{/if}}</td>
        {{/if}}
      </tr>
    </script>
    {{{{/raw-helper}}}}
  {{else}}
    {{{{raw-helper}}}}
    <script type="text/x-handlebars-template">
      <tr id="{{id}}">
        {{#if rmb}}
          <td>合计人民币（大写）：</td>
          <td colspan="8"  id="rmb">{{rmb}}</td>
          <td id="income-total">&yen; {{income_after_total}}</td>
          <td colspan="3"></td>
        {{else}}
          <td data-title="推广期间">{{quote_start_date}} - {{quote_end_date}}</td>
          <td data-title="广告名称" id="{{ad_id}}" class="ad_id">{{ad_name}}</td>
          <td data-title="软著名称">{{pick sdk_type sdk_types}}</td>
          <td data-title="渠道包">{{cid}}</td>
          <td data-title="单价（元）" class="price">&yen; {{quote_rmb}}</td>
          <td data-title="渠道CPA（核减前）" class="cpa-before">{{cpa}}</td>
          <td data-title="应结算收入（核减前）" class="income-before">&yen; {{income}}</td>
          <td data-title="单价（核减后）">
            <a class="edit-button price-after" title="单价（核减后）">&yen; {{quote_rmb_after}}</a>
          </td>
          <td data-title="渠道CPA（核减后）">
            <a class="edit-button cpa-after" title="渠道CPA（核减后）">{{#if cpa_after}}{{cpa_after}}{{else}}编辑{{/if}}</a>
          </td>
          <td data-title="实际结算收入（核减后）" class="income-after">&yen; {{income_after}}</td>
          <td data-title="核减比例" class="proportion">{{rate}}%</td>
          <td data-title="核减金额" class="amount">&yen; {{money_cut}}</td>
          <td data-title="备注">
            <a class="edit-button comment" title="备注">{{#if remark}}{{remark}}{{else}}编辑{{/if}}</a>
          </td>
        {{/if}}
      </tr>
    </script>
    {{{{/raw-helper}}}}
  {{/if}}
  </tbody>
</table>

{{#if init}}
  <form class="form-horizontal clearfix model-editor" method="post" enctype="multipart/form-data">
    <fieldset>
      <legend>付款方</legend>
      <div class="form-group">
        <label class="control-label col-sm-2">付款方：</label>
        <div class="col-sm-2">
          <input readonly="readonly" type="text" name="{{#if company}}company{{else}}full_name{{/if}}" value= "{{#if company}}{{company}}{{else}}{{full_name}}{{/if}}" class="readonly">
        </div>
        <div class="col-sm-2">
          <p class="form-control-static">(确认盖章)</p>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">发票抬头：</label>
        <div class="col-sm-2">
          <input class="form-control" name="header" type="text" value="{{header}}" required/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">发票类型：</label>
        <div class="col-sm-2">
          <select id="receipt-type" class="form-control" name="type">
            {{#if type}}
              {{#equal type 0}}
                <option value="1">增值税专用发票</option>
                <option selected value="0">增值税普通发票</option>
              {{/equal}}
              {{#equal type 1}}
                <option selected value="1">增值税专用发票</option>
                <option value="0">增值税普通发票</option>
              {{/equal}}
            {{else}}
              <option value="1">增值税专用发票</option>
              <option selected value="0">增值税普通发票</option>
            {{/if}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">发票内容：</label>
        <div class="col-sm-2">
          <select id="receipt-content" class="form-control" name="content_type">
            {{#if content_type}}
              {{#equal content_type 0}}
                <option selected value="0">信息服务费</option>
                <option value="1">信息技术服务费</option>
                <option value="2">技术服务费</option>
                <option value="3">广告服务费（慎用）</option>
              {{/equal}}
              {{#equal content_type 1}}
                <option value="0">信息服务费</option>
                <option selected value="1">信息技术服务费</option>
                <option value="2">技术服务费</option>
                <option value="3">广告服务费（慎用）</option>
              {{/equal}}
              {{#equal content_type 2}}
                <option value="0">信息服务费</option>
                <option value="1">信息技术服务费</option>
                <option selected value="2">技术服务费</option>
                <option value="3">广告服务费（慎用）</option>
              {{/equal}}
              {{#equal content_type 3}}
                <option value="0">信息服务费</option>
                <option value="1">信息技术服务费</option>
                <option value="2">技术服务费</option>
                <option selected value="3">广告服务费（慎用）</option>
              {{/equal}}
            {{else}}
              <option selected value="0">信息服务费</option>
              <option value="1">信息技术服务费</option>
              <option value="2">技术服务费</option>
              <option value="3">广告服务费（慎用）</option>
            {{/if}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">软著名称：</label>
        <div class="col-sm-2">
          <p class="form-control-static">joyWall V1.0</p>
        </div>
        <div class="col-sm-2">
          <p class="form-control-static">红包锁屏V1.0(安卓)</p>
        </div>
        <div class="col-sm-2">
          <p class="form-control-static">红包锁屏V1.0.0(IOS)</p>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">开票金额：</label>
        <div class="col-sm-2">
          <input readonly="readonly" type="text " name="joy_income" value= "{{joy_income}}" class="readonly">
        </div>
        <div class="col-sm-2">
          <input readonly="readonly" type="text " name="red_ad_income" value= "{{red_ad_income}}" class="readonly">
        </div>
        <div class="col-sm-2">
          <input readonly="readonly" type="text " name="red_ios_income" value= "{{red_ios_income}}" class="readonly">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">业务负责人：</label>
        <div class="col-sm-2">
          <input type="text" name="pay_charger" class="form-control" value="{{pay_charger}}" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">手机号码：</label>
        <div class="col-sm-2">
          <input type="text" name="pay_telephone" class="form-control" value="{{pay_telephone}}" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">地址：</label>
        <div class="col-sm-2">
          <input type="text" name="pay_address" class="form-control" value="{{pay_address}}" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">日期：</label>
        <div class="col-sm-2">
          <p class="form-control-static">{{apply_time}}</p>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>收款方</legend>
      <div class="form-group">
        <label class="control-label col-sm-2">收款方：</label>
        <div class="col-sm-6">
          <input readonly="readonly" type="text " value="{{accept_company}}" class="readonly">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">开户名称：</label>
        <div class="col-sm-6">
          <input readonly="readonly" type="text " name="accept_company" value="{{accept_company}}"  class="readonly">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">开户银行：</label>
        <div class="col-sm-6">
          <input readonly="readonly" type="text " name="accept_bank" value="{{accept_bank}}" class="readonly">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">开户账号：</label>
        <div class="col-sm-6">
          <input readonly="readonly" type="text " name="accept_account" value="{{accept_account}}" class="readonly">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">业务负责人：</label>
        <div class="col-sm-2">
          {{#if init}}
            {{#if is_assistant}}
              <select name="{{charger}}" class="form-control">
                {{#each chargers}}
                  <option value={{this}}>{{this}}</option>
                {{/each}}
              </select>
            {{else}}
              <input readonly="readonly" type="text " value={{applicant}}, name="applicant" class="readonly">
            {{/if}}
          {{else}}
            <p class="form-control-static">{{#if charger}}{{charger}}{{else}}{{applicant}}{{/if}}</p>
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">手机号码：</label>
        <div class="col-sm-2">
          <input type="text" name="accept_telephone" class="form-control" value=" {{accept_telephone}}">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">地址：</label>
        <div class="col-sm-2">
          <input type="text" name="accept_address" class="form-control" value="{{accept_address}}">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">日期：</label>
        <div class="col-sm-3">
          <p class="form-control-static">{{apply_time}}</p>
        </div>
      </div>
    </fieldset>

    <div class="form-group receipt-margin">
      <div class="uploader fetcher" data-url="{{API}}file/" data-need-validate="true" id="app-uploader" data-name="ad_url">
        <label class="control-label col-sm-2">客户对账单：</label>
        <div class="col-sm-6" id="description">
          <input type="text" placeholder="可选的描述" class="form-control" name="attachment_desc">
        </div>
        <div class="su-placeholder col-sm-6  col-sm-offset-2" data-initial="请上传文件。" data-progress="上传文件中..">
          {{#if ad_url}}
            <div class="su-item">
              <a href="{{UPLOAD}}{{ad_url}}">{{ad_url}}</a>
            </div>
          {{/if}}
        </div>
        <label class="btn btn-info su-upload-button col-sm-6 col-sm-offset-2">
          <i class="fa fa-upload"></i> 选择文件
        </label>
        <input type="hidden" name="attachment" value="{{ad_url}}" class="su-url form-control">
      </div>
    </div>

    <div class="form-group">
      <label for="approval" class="control-label col-sm-2">特批：</label>
      <div class="col-sm-6"  id="approval" >
        <textarea class="form-control" rows="6" name="comment" maxlength="1024" value={{comment}}></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-2">
        {{#if isReapply}}
          <button class="btn btn-primary" id="reapply-button"><i class="fa fa-save"></i>重新申请</button>
        {{else}}
          <button class="btn btn-primary"><i class="fa fa-save"></i>提交</button>
        {{/if}}
      </div>
    </div>
    <input type="hidden" name="income" value="{{income_after_total}}">
    <input type="hidden" name="income_first" value="{{income_before_total}}">
    <input type="hidden" name="cpa_first_total" value="{{cpa_first_total}}">
    <input type="hidden" name="cpa_after_total" value="{{cpa_after_total}}">
    <input readonly="readonly" type="hidden" name="agreement_id" value="{{agreement_id}}">
    <input readonly="readonly" type="hidden" name="start" value= "{{start}}">
    <input readonly="readonly" type="hidden" name="end" value= "{{end}}">
  </form>
{{else}}
  <div role="tabpanel" class="tabpanel">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#pay" aria-controls="pay" role="tab" data-toggle="tab"><i class="fa fa-file-text"></i> 付款方</a></li>
      <li role="presentation"><a href="#accept" aria-controls="accept" role="tab" data-toggle="tab"><i class="fa fa-file-text"></i>收款方</a></li>
      <li role="presentation"><a href="#extra" aria-controls="extra" role="tab" data-toggle="tab"><i class="fa fa-edit"></i>特批/对账单</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="pay" role="tabpanel">
        <table class="table table-bordered table-striped">
          <tr>
            <th width="10%">付款方</th>
            <td>{{#if company}}{{company}}{{else}}{{full_name}}{{/if}}</td>
          </tr>
          <tr>
            <th>发票抬头</th>
            <td>
              {{#if view}}
