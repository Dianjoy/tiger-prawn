          <tr>
            <th>发票类型</th>
            <td>
              {{#if view}}
                {{pick type types}}
              {{else}}
                <a class="edit" href="#type" data-type="select" data-options="types">{{pick type types}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>发票内容</th>
            <td>
              {{#if view}}
                {{pick content_type content_types}}
              {{else}}
                <a class="edit" href="#content_type" data-type="select" data-options="content_types">{{pick content_type content_types}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>软著名称</th>
            <td>
              <p class="col-sm-3">joyWall V1.0 </p>
              <p class="col-sm-3">红包锁屏V1.0(安卓) </p>
              <p class="col-sm-3">红包锁屏V1.0.0(IOS)</p>
            </td>

          </tr>
          <tr>
            <th>开票金额</th>
            <td>
              <p class="col-sm-3">{{joy_income}}</p>
              <p class="col-sm-3"> {{red_ad_income}}</p>
              <p class="col-sm-3">{{red_ios_income}}</p>
