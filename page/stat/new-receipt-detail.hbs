                <a class="edit" href="#pay_address">{{pay_address}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>日期</th>
            <td>{{apply_time}}</td>
          </tr>
        </table>
      </div>
      <div class="tab-pane" id="accept" role="tabpanel">
        <table class="table table-bordered table-striped">
          <tr>
            <th width="10%">收款方</th>
            <td>{{accept_company}}</td>
          </tr>
          <tr>
            <th>开户名称</th>
            <td>{{accept_company}}</td>
          </tr>
          <tr>
            <th>开户银行</th>
            <td>{{accept_bank}}</td>
          </tr>
          <tr>
            <th>开户账号</th>
            <td>{{accept_account}}</td>
          </tr>
          <tr>
            <th>业务负责人</th>
            <td>{{#if charger}}{{charger}}{{else}}{{applicant}}{{/if}}</td>
          </tr>
          <tr>
            <th>手机号码</th>
            <td>
              {{#if view}}
                {{accept_telephone}}
              {{else}}
                <a class="edit" href="#accept_telephone">{{accept_telephone}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>地址</th>
            <td>
              {{#if view}}
                {{accept_address}}
              {{else}}
                <a class="edit" href="#accept_address">{{accept_address}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>日期</th>
            <td>{{apply_time}}</td>
          </tr>
        </table>
      </div>
      <div class="tab-pane" id="extra" role="tabpanel">
        <table class="table table-bordered table-striped">
          <tr>
            <th width="10%">特批</th>
            <td>
              {{#if view}}
                {{comment}}
              {{else}}
                <a class="edit" href="#comment">{{comment}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>对账单描述</th>
            <td>
              {{#if view}}
                {{attachment_desc}}
              {{else}}
                <a class="edit" href="#attachment_desc">{{attachment_desc}}</a>
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>客户对账单</th>
            <td>
              {{#if view}}
                {{#if attachment}}
                  <a>
                    <img src="{{UPLOAD}}{{attachment}}">
                  </a>
                {{/if}}
              {{else}}
                {{#if attachment}}
                <a class="edit" href="#attachment" data-type="file" data-multiple="true" data-append="true" data-refresh="true" data-removable="true">
                  <img src="{{UPLOAD}}{{attachment}}" class="img-thumbnail">
                {{else}}
                  <a class="edit" href="#attachment" data-type="file" data-multiple="true" data-append="true" data-refresh="true" data-removable="true">
                    上传对账单
