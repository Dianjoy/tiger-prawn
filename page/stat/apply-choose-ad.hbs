<h4>选择结算的广告：</h4>
<form id="popup-form" data-mediator-class="tp.page.applyChooseAd" method="post">
  <div class="ad-date-range clearfix">
    <div class="range">
      <label class="control-label pull-left" id="settlement-period">结算周期：</label>
      <div class="date input-group col-sm-2 col-md-2 pull-left">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        <input type="date" id="settle-start-date" class="form-control datetimepicker" name="start" data-format="YYYY-MM-DD">
      </div>
      <div class="date input-group col-sm-2 col-md-2 pull-left">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        <input type="date" id="settle-end-date" class="form-control datetimepicker" name="end" data-format="YYYY-MM-DD">
      </div>
      <button type="button" class="btn btn-primary" id="choose-ad-button"><i class="fa fa-play"></i> 检索</button>
    </div>
  </div>
  <table class="table smart-table" data-url="{{API}}invoice/settle/{{id}}" data-ranger=".ad-date-range" data-start="{{start}}" data-end="{{end}}" data-collection-id="invoice-list" style="height:225px;">
    <thead>
      <tr><th style="border:none"><label><input type="checkbox" value="ids" class="check-all"> 全选</label></th></tr>
    </thead>
    <tbody id="chose-ad-table" class="well">
    {{{{raw-helper}}}}
    <script type="text/x-handlebars-template">
      <tr>
        <td><label for="ids"><input type="checkbox" name="ids" value="{{ad_id}}"></label></td>
        <td>{{ad_name}}</td>
        <td>渠道号：{{channel_id}}</td>
      </tr>
    </script>
    {{{{/raw-helper}}}}
    </tbody>
    <tfoot class="waiting">
    <tr>
      <td colspan="10"><i class="fa fa-spinner fa-spin fa-2x"></i><br>加载中，请稍候</td>
    </tr>
    </tfoot>
  </table>
</form>