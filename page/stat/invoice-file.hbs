<div class="form-group">
  <label for="editor-popup-input">上传文件</label>
  <div class="uploader" data-url="{{API}}file/" data-need-validate="true" data-accept="{{accept}}" id="app-uploader" data-id="{{id}}" data-name="{{prop}}" {{#if multiple}}data-multiple="true"{{/if}} {{#if append}}data-append="true"{{/if}}>
    <div class="su-placeholder {{#if removable}}su-removable{{/if}}" data-initial="请上传文件。" data-progress="上传文件中..">
      {{#if multiple}}
        {{#each items}}
          <div class="su-item">
            <a href="{{.}}" download="{{.}}">{{.}}</a>
          </div>
        {{/each}}
      {{/if}}
    </div>
    <label class="btn btn-info btn-block su-upload-button">
      <i class="fa fa-upload"></i> 选择多个文件并上传
    </label>
    <input type="hidden" name="{{prop}}" value="{{value}}" class="su-url form-control" id="url-{{prop}}">
  </div>
</div>