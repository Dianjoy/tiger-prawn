<h2>预收款明细 <small>{{full_name}}</small></h2>
<table class="table table-bordered table-striped smart-table responsive-table" data-url="{{API}}channel/{{id}}/prepaid/" data-pagination=".pagination" data-pagesize="10" data-pagesize-controller="#pagesize">
  <thead>
  <tr>
    <th>日期</th>
    <th>金额</th>
    <th>事项</th>
    <th>操作人员</th>
  </tr>
  </thead>
  <tbody>
    <script type="text/x-handlebars-template">
    <tr>
      <td>{{date}}</td>
      <td>{{d100 rmb}}</td>
      <td>{{#greater rmb 0}}预收{{else if cost_type}}退款{{else}}抵扣 {{ad_name}} {{cid}} 推广费用{{/greater}}</td>
      <td>{{admin_name}}</td>
    </tr>
    </script>
  </tbody>
</table>

<nav class="pull-right table-footer">
  <ul class="pagination">
    <script type="text/x-handlebars-template">
      {{{{raw-helper}}}}
        <li><a href="#/to/{{prev}}"><i class="fa fa-chevron-left"></i></a></li>
        {{#each pages}}
        <li class="hidden-xs"><a href="#/to/{{index}}">{{label}}</a></li>
        {{/each}}
        <li><a href="#/to/{{next}}"><i class="fa fa-chevron-right"></i></a></li>
      {{{{/raw-helper}}}}
    </script>
  </ul>
  <div class="form-group">
    <label for="pagesize">每页显示：</label>
    <select class="form-control" id="pagesize">
      <option selected>10</option>
      <option>20</option>
      <option>50</option>
    </select>
  </div>
</nav>